@model ShoppingCart.Model.PersonModel
@{
    ViewBag.Title = "ViewProfile";
}

<h2>Your Profile</h2>

<h4><input type="button" value="EDIT" id="btnEdit"/></h4>

<table border="1">
    <tr>
        <th>Titles</th>
        <th>Description</th>
    </tr>
    <tr>
        <td>
            Name:
        </td>
        <td>
            @Model.FirstName @Model.LastName
        </td>
    </tr>
    <tr>
        <td>
            Contact Number:
        </td>
        <td>
            @Model.MobileNo
        </td>
    </tr>
    <tr>
        <td>
            Date of Birth:
        </td>
        <td>
            @Model.DateOfBirth
        </td>
    </tr>
    <tr>
        <td>
            E-Mail:
        </td>
        <td>
            @Model.Email
        </td>
    </tr>

</table>

<div class="modal fade" id="PersonModal" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
            </div>
        </div>
    </div>
</div>

<script>
    $('#btnEdit').on("click", function () {
        $.ajax({
            type: 'Get',
            url: '@Url.Content("~/Person/AddEditPerson")',
            data: { PersonId: '@Model.PersonId' },
            success: function (data)
            {
                $('#PersonModal .modal-content').html('');
                $('#PersonModal .modal-content').html(data);
                $('#PersonModal').modal('show');
                $('#PersonModal').appendTo('body');
                $('#Title h4').html('Edit Person');
            }
        })
    })
</script>

